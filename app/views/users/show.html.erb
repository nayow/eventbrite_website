<h1>Users#show</h1>
<br/>
<%= @user.first_name %><br/>
<%= @user.last_name %><br/>
<%= @user.description %><br/>
<%= @user.email %><br/>
<br/>

<div>
  <h3>Participe à :</h3>
  <% Attendance.retrieve_events_created_by(@user.id).each do |event| %>
    <%= link_to event.title , event_path(event.id) %><br/>
  <% end %>
  
  <h3>Créateur de :</h3>
  <% Event.all.each do |event| %>
    <% if event.admin_id == @user.id %>
      <%= link_to event.title , event_path(event.id) %><br/>
    <% end %>
  <% end %>

</div>

<p><%= link_to 'Modifier les infos' , edit_user_registration_path %></p>