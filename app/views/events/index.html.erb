<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">eventbrite!</h1>
    <p>tous les événements près de chez toi</p>
    <p><%= button_to "Créé ton événement", new_event_path, method: :get, class:"btn btn-primary btn-sm" %></p>
  </div>
</div>

<div class="card-columns" style="margin-left:7%; margin-right:7%;">
  <% Event.all.each do |event| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= event.title %></h5>
      <p class="card-text"><%= event.description %></p>
      <p><%= button_to "Plus d'infos", event_path(event.id), method: :get, class:"btn btn-secondary" %></p>
      <p class="card-text"><small class="text-muted"><%= event.start_date %></small></p>
    </div>
  </div>
  <% end %>
</div>